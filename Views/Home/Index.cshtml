@using Falcon_Blog.Models
@model IEnumerable<BlogPost>



<!-- Page Header -->
<header class="masthead" style="background-image: url('/Images/david-ballew-tSsLjyDYs44-unsplash.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h2>A .NET Blog by Peter Fralick</h2>
                    <span class="subheading"></span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">

            @foreach (var post in Model)
            {
                <div class="post-preview">

                    @*<a href="@Url.Action("Details", "BlogPosts", new { id = post.Id })">*@
                    <a href="@Url.Action("Details", "BlogPosts", new { slug = post.Slug })">


                        <h2 class="post-title">
                            @post.Title
                        </h2>
                        <h3 class="post-subtitle">
                            @post.Abstract
                        </h3>
                        
                        @if (post.MediaUrl != null)
                        {
                            <img class="img-responsive" src="@post.MediaUrl" width="250" height="136" alt="" />
                        }
                    </a>
                    <p class="post-meta">
                        Posted by
                        <a href="#">Peter Fralick</a>
                        on @post.Created.ToString("MMM dd, yyyy")
                    </p>
                </div>
            }
            <hr>

            <!-- Pager -->
            <div class="clearfix">
                <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
            </div>
        </div>
    </div>
</div>



